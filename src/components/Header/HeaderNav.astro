                <!--Servicios -->
                <li>
                    <button
                        id="dropdownNavbarLink"
                        data-dropdown-toggle="dropdownServicios"
                        class="flex text-sm lg:text-xl items-center linkTextColor justify-between w-full py-2 px-3 text-dark md:text-white md:hover:bg-transparent md:border-0 md:hover:text-white md:p-0 md:w-auto dark:text-white md:dark:hover:text-blue-500 dark:focus:text-white dark:hover:bg-gray-700 md:dark:hover:bg-transparent"
                        >Servicios <svg
                            class="w-2.5 h-2.5 ms-2.5"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 10 6"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="m1 1 4 4 4-4"></path>
                        </svg></button
                    >

                    <div
                        id="dropdownServicios"
                        class="z-10 group-hover:block hidden listButton font-normal bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700 dark:divide-gray-600"
                    >
                        <ul
                            id="sublistas"
                            class="py-2 text-sm text-gray-700 dark:text-gray-200"
                            aria-labelledby="dropdownLargeButton"
                        >
                            <li class="group relative">
                                <a
                                    href="/Servicios/CElectronica"
                                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                                    >C. Electronica</a
                                >
                            </li>

                            <li class="group relative">
                                <a
                                    href="/Servicios/CGubernamental"
                                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                                    >C. Gubernamental</a
                                >
                            </li>

                            <li class="group relative">
                                <a
                                    href="/Servicios/Autofacturacion"
                                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                                    >C. Autofacturacion</a
                                >
                            </li>

                            <li class="group relative">
                                <a
                                    href="/Servicios/Addendas"
                                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                                    >Addendas</a
                                >
                            </li>
                        </ul>
                    </div>
                </li>

                <!--Portales-->
                <li>
                    <button
                        id="dropdownNavbarLink"
                        data-dropdown-toggle="dropdownNavbar"
                        class="flex text-sm lg:text-xl items-center linkTextColor justify-between w-full py-2 px-3 text-dark md:text-white hover:bg-gray-100 md:hover:bg-transparent md:bwhite md:p-0 md:w-auto dark:text-white md:dark:hover:text-blue-500 dark:focus:text-white dark:hover:bg-gray-700 md:dark:hover:bg-transparent"
                        >Portales <svg
                            class="w-2.5 h-2.5 ms-2.5"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 10 6"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="m1 1 4 4 4-4"></path>
                        </svg></button
