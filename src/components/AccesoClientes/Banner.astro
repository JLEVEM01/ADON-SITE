---
import { WavesBottom } from "../Index/UIComponents/WavesBottom"
import Container from "../Container.astro"
import "../../styles/WavsStyles.css"
import Wave from "../Wave.astro"
---


<section data-aos="zoom-out" class="bg-AccesoClientes z-0 bg-fixed bg-cover h-[100vh] relative ">
