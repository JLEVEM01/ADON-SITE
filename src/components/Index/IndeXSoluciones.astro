---
import Container from "../Container.astro";
import GridSoluciones from "./GridSoluciones.astro";
import { BorderBeam } from "../MagicUI/BorderBearm";
---

<section class="my-10">
    <Container>
        <div class="flex space-x-3 mb-20 w-full">
            <h1 class="text-6xl text-dark montserrat-bold text-left">
                Conoce nueestras <br /> soluciones
            </h1>
        </div>

        <div class="flex flex-row">
            <div class="flex flex-col space-y-8">
                <div class="flex flex-row space-x-4 justify-end">
                    <div class="flex flex-col space-y-5 justify-end">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon text-right icon-tabler icons-tabler-outline icon-tabler-box-model-2"
                            ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                            ></path><path d="M8 8h8v8h-8z"></path><path
                                d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
